<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/error_message1_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oops..."
        android:textSize="16sp"
        android:textColor="@color/tertiary_100"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/error_message2_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/error_message_asset"
        android:textAlignment="center"
        android:textColor="@color/tertiary_100"
        android:textSize="13sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_message1_text_view" />

    <TextView
        android:id="@+id/error_message3_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/error_message_asset2"
        android:textAlignment="center"
        android:textColor="@color/tertiary_100"
        android:textSize="13sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toBottomOf="@+id/error_message2_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>