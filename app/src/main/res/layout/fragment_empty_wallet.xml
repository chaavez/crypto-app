<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/empty_wallet_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Olá!"
        android:textAlignment="center"
        android:textColor="@color/tertiary_100"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/empty_wallet_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Você não tem nenhuma moeda na sua carteira"
        android:textAlignment="center"
        android:textColor="@color/tertiary_100"
        android:textSize="13sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty_wallet_text_view" />

    <TextView
        android:id="@+id/empty_wallet_text_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="por favor, faça uma simulação"
        android:textAlignment="center"
        android:textColor="@color/tertiary_100"
        android:textSize="13sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty_wallet_text_view2" />

</androidx.constraintlayout.widget.ConstraintLayout>