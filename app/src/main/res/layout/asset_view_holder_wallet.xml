<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/primary_200"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_image_view"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/symbol_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="symbol"
                android:textColor="@color/tertiary_100"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon_image_view"
                app:layout_constraintStart_toEndOf="@+id/icon_image_view"
                app:layout_constraintTop_toTopOf="@+id/icon_image_view" />

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_regular"
                android:text="name"
                android:textColor="@color/tertiary_100"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/symbol_text_view"
                app:layout_constraintStart_toEndOf="@+id/symbol_text_view"
                app:layout_constraintTop_toTopOf="@+id/symbol_text_view" />

            <TextView
                android:id="@+id/variation_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/roboto_regular"
                android:text="100%"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/invested_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto_regular"
                android:text="R$ 20.690,56"
                android:textColor="@color/tertiary_100"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/icon_image_view"
                app:layout_constraintTop_toBottomOf="@+id/symbol_text_view" />

            <TextView
                android:id="@+id/invested_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/invested"
                android:textAlignment="center"
                android:textColor="@color/tertiary_100"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/invested_value_text_view"
                app:layout_constraintStart_toStartOf="@+id/invested_value_text_view"
                app:layout_constraintTop_toBottomOf="@+id/invested_value_text_view" />

            <TextView
                android:id="@+id/current_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="R$ 20.690,56"
                android:textColor="@color/tertiary_100"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/profit_value_text_view"
                app:layout_constraintStart_toEndOf="@+id/invested_value_text_view"
                app:layout_constraintTop_toTopOf="@+id/invested_value_text_view" />

            <TextView
                android:id="@+id/current_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/current"
                android:textAlignment="center"
                android:textColor="@color/tertiary_100"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/current_value_text_view"
                app:layout_constraintStart_toStartOf="@+id/current_value_text_view"
                app:layout_constraintTop_toTopOf="@+id/invested_text_view" />

            <TextView
                android:id="@+id/profit_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 20.690,56"
                android:textSize="14sp"
                android:textColor="@color/tertiary_100"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintEnd_toEndOf="@+id/variation_text_view"
                app:layout_constraintTop_toTopOf="@+id/current_value_text_view" />

            <TextView
                android:id="@+id/profit_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/profit"
                android:textAlignment="center"
                android:textColor="@color/tertiary_100"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/profit_value_text_view"
                app:layout_constraintStart_toStartOf="@+id/profit_value_text_view"
                app:layout_constraintTop_toBottomOf="@+id/current_value_text_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
